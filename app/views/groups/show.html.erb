<div class="row">
  <div class="col-lg-12">
    <h1><%= homepage_name %>
      <small><%= @group.name %></small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> 主页</a></li>
      <li class="active"><i class="fa fa-table"></i> <%= @group.name %>小组成员</li>
    </ol>
  </div>
</div><!-- /.row -->

<div class="row">
  <div class="col-lg-12">

    <p><h1><%= @group.name %></h1>  <%= @group.description %></p>

    <table class="table table-bordered table-hover tablesorter tablesorter-default" role="grid">
      <thead>
      <tr>
        <td> #</td>
        <td><i class="fa fa-user"></i> 姓名 <i class="fa fa-sort"></i></td>
        <td><i class="fa fa-phone"></i> 座机 <i class="fa fa-sort"></i></td>
        <td><i class="fa fa-mobile"></i> 手机 <i class="fa fa-sort"></i></td>
        <td><i class="fa fa-envelope"></i> Email <i class="fa fa-sort"></i></td>
        <td><i class="fa fa-calendar"></i> 生日 <i class="fa fa-sort"></i></td>
        <td><i class="fa fa-calendar"> 第一次来</td>
        <td><i class="fa fa-home"></i> 地址</td>
        <td><i class="fa fa-comment"></i> 备注</td>
        <td> &nbsp;</td>
      </tr>
      </thead>
      <tbody>
      <% @contacts.each do |contact| %>
          <tr>
            <td> <%= contact.id %></td>
            <td> <%= link_to(edit_contact_path(contact)) do %>
                  <% if contact.gender==0 %>
                      <i class="fa fa-female lg red"> <%= contact.name %></i>
                  <% else %>
                      <i class="fa fa-male lg blue"> <%= contact.name %></i>
                  <% end end %> </td>
            <td> <%= contact.telephone %> </td>
            <td> <%= contact.mobile %> </td>
            <td> <%= contact.email %> </td>
            <td> <%= contact.birthday %> </td>
            <td> <%= contact.come %> </td>
            <td> <% unless contact.address.blank? %><span class="Hinweis" title="<%= contact.address %>"><i class="fa fa-home"></i> 查看</span><% end %> </td>
            <td><span class="Hinweis" title="<%= contact.comment %>"><%= truncate(contact.comment, :length => 10) %></span></td>
            <td>
              <%= link_to('<i class="fa fa-trash-o"></i>'.html_safe, contact_path(contact), :class => "red", :method => :delete, data: {confirm: '你确定吗？'}) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>


  </div>
</div><!-- /.row -->



