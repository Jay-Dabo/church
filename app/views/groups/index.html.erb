<%= render partial: 'common/header', locals: {sub_title: '用户组', breadcrumb: '列表', new_path: new_group_path} %>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-bordered table-hover tablesorter tablesorter-default" role="grid">
      <thead>
      <tr>
        <td> #</td>
        <td> <i class="fa fa-user"></i> 小组名称 <i class="fa fa-sort"></i></td>
        <td> <i class="fa fa-comment"></i> 备注 <i class="fa fa-sort"></i></td>
        <td> &nbsp; </td>
        <td> &nbsp; </td>
      </tr>
      </thead>
      <tbody>
      <% @groups.each do |group| %>
          <tr>
            <td> <%= group.id %></td>
            <td> <%= link_to group.name, group_path(group) %></td>
            <td> <span title="<%=group.description  %>"><%= truncate(group.description, :length => 20) %></span> </td>
            <td>
              <%= link_to('<i class="fa fa-edit"></i> 编辑'.html_safe, edit_group_path(group)) %>
            </td>
            <td>
              <%= link_to('<i class="fa fa-trash-o"></i> 删除'.html_safe, group_path(group), :class => "red", :method => :delete, data: { confirm: '你确定吗？' }) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div><!-- /.row -->