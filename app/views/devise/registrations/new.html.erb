<div class="row">
  <div class="col-lg-12">
    <h1><%=homepage_name %> <small>注册</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> 主页</a></li>
      <li class="active"><i class="fa fa-table"></i> 注册</li>
    </ol>
  </div>
</div><!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username, label: '用户名', :required => true, :placeholder => '请使用26个字母和数字组成用户名', :autofocus => true %>
          <%= f.input :name, label: '真实姓名', :required => true, :placeholder => '请填写真实姓名', :autofocus => true %>
          <%= f.input :email, :required => true, :autofocus => true %>
          <%= f.input :password, label: '密&nbsp;&nbsp;&nbsp;&nbsp;码'.html_safe, :required => true %>
          <%= f.input :password_confirmation, label: '密码确认'.html_safe, :required => true %>
        </div>

        <div class="form-actions">
          <%= f.submit "注册", data: {disable_with: '正在提交...' }, :class => "btn btn-primary"%>
        </div>
    <% end %>
  </div>
</div><!-- /.row -->