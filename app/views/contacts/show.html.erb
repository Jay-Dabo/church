<%= render partial: 'common/header', locals: {sub_title: '联系人', breadcrumb: '联系人详细信息', new_path: nil} %>

<h2>
  <% if @contact.gender==0 %>
      <span class="red"> <%= @contact.name %></span>
  <% else %>
      <span class="blue"> <%= @contact.name %></span>
  <% end %>

  <small><%= link_to('<i class= "fa fa-edit"></i>'.html_safe, edit_contact_path(@contact), :class => "blue") %></small>
</h2>



<div class="row">
  <div class="col-lg-12">

    <table class="table table-bordered table-hover tablesorter tablesorter-default" role="grid">
      <%= render partial:'common/show_contacts',locals: {contact: @contact} %>
      <tr>
        <td><i class="fa fa-map-marker"></i></td>
        <td>地址</td>
        <td> <%= @contact.address %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-home"></i></td>
        <td>籍贯</td>
        <td> <%= @contact.native_place %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-calendar"></i></td>
        <td><span class="Hinweis" rel="tooltip" title="第一次来团契">首访</span></td>
        <td> <%= @contact.come %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-calendar"></i></td>
        <td>决志</td>
        <td> <%= @contact.decision %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-user"></i></td>
        <td><span class="Hinweis" rel="tooltip" title="谁带领决志祷告">带领</span></td>
        <td> <%= @contact.decision_with %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-calendar"></i></td>
        <td>受洗</td>
        <td> <%= @contact.baptism %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-calendar"></i></td>
        <td><span class="Hinweis" rel="tooltip" title="离开Aachen">离开</span></td>
        <td> <%= @contact.go %> </td>
      </tr>
      <tr>
      <tr>
        <td><i class="fa fa-comment"></i></td>
        <td>备注</td>
        <td> <%= @contact.comment %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-globe"></i></td>
        <td><span class="Hinweis" rel="tooltip" title="添加联系人设备的 IP 地址">IP</span></td>
        <td> <%= @contact.register_ip %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-calendar"></i></td>
        <td><span class="Hinweis" rel="tooltip" title="信息创建时间">创建</span></td>
        <td> <%= @contact.created_at %> </td>
      </tr>
      <tr>
        <td><i class="fa fa-calendar"></i></td>
        <td><span class="Hinweis" rel="tooltip" title="信息更新时间">更新</span></td>
        <td> <%= @contact.updated_at %> </td>
      </tr>

    </table>
  </div>
</div><!-- /.row -->
</div>