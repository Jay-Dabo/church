<%= simple_form_for(@gathering) do |f| %>
    <%= f.error_notification %>
    <%= f.input :gathering, label:'聚会名称' %>
    <%= f.input :description, label:'备注' %>
    <div class="form-actions">
      <%= f.submit "提交", data: {disable_with: '正在提交...' }, :class => "btn btn-primary"%>
    </div>
<% end %>