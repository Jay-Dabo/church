<script src="http://cdn.staticfile.org/jqueryui/1.10.4/jquery-ui.min.js"></script>
<script src="http://cdn.staticfile.org/twitter-bootstrap/<%= bootstrap_version %>/js/bootstrap.min.js"></script>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<!-- Page Specific Plugins -->
<script src="http://cdn.staticfile.org/jquery.tablesorter/2.16.4/jquery.tablesorter.js"></script>
<script src="http://cdn.staticfile.org/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $(function() {
        $("table").tablesorter({debug: true});
        $('#datetimepicker1 input').datepicker({
            format: "yyyy-mm-dd"
        });
        $('#datetimepicker2 input').datepicker({
            format: "yyyy-mm-dd"
        });
        $('#datetimepicker3 input').datepicker({
            format: "yyyy-mm-dd"
        });
    });
</script>

</body>
</html>
